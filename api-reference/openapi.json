  "components": {
    "schemas": {
      "NewAgent": {
        "type": "object",
        "required": ["workspaceId", "type"],
        "properties": {
          "workspaceId": {
            "type": "string",
            "example": "683578ec8ac922546dbaadaa"
          },
          "type": {
            "type": "string",
            "enum": ["outbound", "inbound"],
            "example": "outbound"
          }
        }
      },
      "UpdateAgent": {
        "type": "object",
        "required": ["workspaceId", "status"],
        "properties": {
          "workspaceId": {
            "type": "string",
