            "example": false
          }
        }
      },
      "Agent": {
        "type": "object",
        "properties": {
          "_id": { "type": "string", "example": "683715217c8e5fe1361c6faa" },
          "workspaceId": { "type": "string", "example": "683578ec8ac922546dbaadaa" },
          "name": { "type": "string", "example": "My Outbound Assistant" },
          "type": { "type": "string", "example": "outbound" }
        }
      },
      "Call": {
        "required": ["agentId"],
        "type": "object",
        "properties": {
          "agentId": {
            "type": "string",
            "description": "ID of the agent"
          },
          "status": {
            "type": "string",
            "description": "Call status"
          }
        }
      },
      "NewCall": {
        "allOf": [
          {
            "$ref": "#/components/schemas/Call"
          },
          {
            "required": ["id"],
            "properties": {
              "id": {
                "type": "integer",
                "format": "int64"
              }
            }
          }
        ]
      },
      "Error": {
        "type": "object",
        "properties": {
          "status": { "type": "integer", "example": 400 },
          "message": { "type": "string", "example": "Unexpected error" }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      },
      "apiKey": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-Key"
      }
    }
  }
}